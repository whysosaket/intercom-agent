# === Company Configuration ===
# Edit these to customize the bot for your company.
# See app/company.py for the full list of options and their defaults.
COMPANY_NAME=Mem0                    # Your company/product name
COMPANY_NAME_ALIAS=MemZero           # Alternate name or pronunciation
COMPANY_PRODUCT_DESCRIPTION=A memory layer for AI agents
COMPANY_SUPPORT_PLATFORM_NAME=Intercom  # Name of your support platform
COMPANY_DOCUMENTATION_URL=https://docs.mem0.ai
COMPANY_PRICING_URL=https://mem0.ai/pricing
COMPANY_SUPPORT_EMAIL=support@mem0.ai

# === Intercom ===
INTERCOM_ACCESS_TOKEN=           # Intercom API bearer token
INTERCOM_WEBHOOK_SECRET=         # For HMAC-SHA1 webhook verification
INTERCOM_ADMIN_ID=               # Admin ID used as reply sender

# === OpenAI ===
OPENAI_API_KEY=                  # OpenAI API key
OPENAI_MODEL=gpt-4o             # Model for response generation

# === Mem0 ===
MEM0_API_KEY=                    # Mem0 platform API key

# === Slack ===
SLACK_BOT_TOKEN=xoxb-...        # Slack Bot OAuth token
SLACK_SIGNING_SECRET=            # Slack request signing secret
SLACK_CHANNEL_ID=C0XXXXXXX      # Channel for review messages

# === Application ===
CONFIDENCE_THRESHOLD=0.8         # Auto-respond threshold (0.0-1.0)
LOG_LEVEL=INFO

# === Sync Configuration ===
SYNC_MAX_CONVERSATIONS=1000      # Max conversations to fetch from Intercom
SYNC_MAX_MESSAGES_PER_CONVERSATION=5  # Max turns per conversation (3-5 recommended)
SYNC_MAX_CONVERSATION_CHARS=3000 # Skip conversations exceeding this character count
SYNC_DATA_DIR=data               # Directory for local JSON storage

# === Doc Agent (Documentation Search) ===
DOC_AGENT_ENABLED=true
DOC_AGENT_MINTLIFY_URL=https://docs.mem0.ai  # Falls back to COMPANY_DOCUMENTATION_URL
DOC_AGENT_MODEL=gpt-4o
DOC_AGENT_CONFIDENCE_THRESHOLD=0.6
DOC_AGENT_MAX_RESULTS=5
DOC_AGENT_PRODUCT_DESCRIPTION=        # Falls back to COMPANY_PRODUCT_DESCRIPTION

# === Mock / Development ===
MOCK_MODE=false                  # Set to true for local testing without real services
CHAT_UI_ENABLED=true             # Enable the /chat testing interface
